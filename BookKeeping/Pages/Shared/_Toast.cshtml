@if (TempData["ToastMessage"] != null)
{
    var toastType = TempData["ToastType"]?.ToString() ?? "success";
    var toastClass = toastType switch
    {
        "success" => "bg-success text-white",
        "warning" => "bg-warning text-dark",
        "error" => "bg-danger text-white",
        _ => "bg-success text-white"
    };
    var autoDismiss = toastType == "success";

    <div class="toast-container position-fixed top-0 end-0 p-3 bookkeep-toast-container" role="region" aria-label="系統通知">
        <div class="toast align-items-center @toastClass border-0" role="alert" aria-live="assertive" aria-atomic="true" data-auto-dismiss="@autoDismiss.ToString().ToLower()">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["ToastMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="關閉通知"></button>
            </div>
        </div>
    </div>
}
